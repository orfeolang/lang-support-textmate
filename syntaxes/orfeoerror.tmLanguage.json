{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "OrfeoError",
    "scopeName": "source.orfeoerror",
    "fileTypes": [ "orfeoerror" ],
    "patterns": [
        { "include": "#header" },
        { "include": "#line-number" },
        { "include": "#icon-eject" },
        { "include": "#icon-sequence-start" }
    ],
    "repository": {
        "header": {
            "name": "markup.heading.orfeoerror",
            "match": "(?<=^)===OOPS!==="
        },
        "line-number": {
            "name": "keyword.other.line-number.orfeoerror",
            "match": "(?<=^)\\d+➤"
        },
        "icon-eject": {
            "name": "constant.character.icon.eject.orfeoerror",
            "match": "(?<=^\\d+➤.*)⏏"
        },
        "icon-sequence-start": {
            "name": "constant.character.icon.sequence-start.orfeoerror",
            "match": "(?<=^\\d+➤.*)⭢"
        }
    }
}
