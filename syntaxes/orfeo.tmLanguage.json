{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Orfeo",
	"patterns": [
		{ "include": "#comment-single-line" },
		{ "include": "#note" },
		{ "include": "#note-container" },
		{ "include": "#backtick-note" },
		{ "include": "#keywords" }
	],
	"repository": {
		"comment-single-line": {
			"name": "comment.line.orfeo",
			"begin": "(#\\s)|##",
			"end": "$"
		},
		"note": {
			"name": "string.quoted.double.orfeo",
            "match": "[a-zA-ZáéíóúÁÉÍÓÚâêîôûÂÊÎÔÛàèùÀÈÙëïüËÏÜçÇñÑ'¡¿-]([a-zA-ZáéíóúÁÉÍÓÚâêîôûÂÊÎÔÛàèùÀÈÙëïüËÏÜçÇñÑ'-\\[/\\]♮♭♯,._0-9]*[a-zA-ZáéíóúÁÉÍÓÚâêîôûÂÊÎÔÛàèùÀÈÙëïüËÏÜçÇñÑ'?\\]♮♭♯,._0-9!])?"
		},
		"note-container": {
			"name": "string.quoted.double.orfeo",
			"begin": "<",
			"end": ">"
		},
		"backtick-note": {
			"name": "string.quoted.double.orfeo",
            "match": "`[^()|\\s$]+"
		},
		"keywords": {
			"patterns": [
				{
                    "name": "keyword.control.orfeo",
                    "match": "^\\s*=finish\\s*$"
                },
				{
                    "name": "keyword.control.orfeo",
                    "match": "@[a-zA-Z0-9'_.-]*[a-zA-Z0-9']+(\\s|$)"
                }
			]
		}
	},
	"scopeName": "source.orfeo"
}
